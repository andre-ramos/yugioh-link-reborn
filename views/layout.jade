doctype
html(ng-app="vikings")
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        title= title
        meta(name='description', content='bla')
        link(rel='stylesheet', href='/css/screen.css')
        link(rel='icon', type='image/x-icon', href='/favicon.ico')
    body(id=bodyId)
        include head
        div#main(data-ui-view)
            block content
        include foot

        script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.4/angular.min.js")
        script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.4/angular-animate.min.js")
        script(src="//code.angularjs.org/1.2.9/angular-cookies.min.js")

        if settings.env == 'production'
            script(src="/js/vikings.js")
        else
            script(src='/js/external/angular-ui-router.min.js')
            script(src='/js/external/ui-bootstrap-0.10.0.min.js')
            script(src='/js/external/ui-bootstrap-tpls-0.10.0.min.js')

            script(src="/js/app.js")

            script(src="/js/controllers.js")
            script(src="/js/controllers/chatCtrl.js")
            script(src="/js/controllers/gameCtrl.js")
            script(src="/js/controllers/game/binCtrl.js")
            script(src="/js/controllers/game/boardCtrl.js")
            script(src="/js/controllers/game/handCtrl.js")
            script(src="/js/controllers/gameRoomCtrl.js")
            script(src="/js/controllers/homeCtrl.js")
            script(src="/js/controllers/libraryCtrl.js")
            script(src="/js/controllers/playerListCtrl.js")
            script(src="/js/controllers/profileCtrl.js")

            script(src="/js/directives.js")
            script(src="/js/directives/cardItem.js")
            script(src="/js/directives/dragAndDrop.js")

            script(src="/js/services/auth.js")
            script(src="/js/services/socket.js")
            script(src="/js/services/users.js")

        script(src="/js/routingConfig.js")
        script(src='/socket.io/socket.io.js')

        script(type="text/ng-template", id="home")
            include partials/home
        script(type="text/ng-template", id="auth")
            include partials/auth
        script(type="text/ng-template", id="auth/guest")
            include partials/auth/guest
        script(type="text/ng-template", id="auth/login")
            include partials/auth/login
        script(type="text/ng-template", id="play")
            include partials/play
        script(type="text/ng-template", id="play/home")
            include partials/play/home
        script(type="text/ng-template", id="play/library")
            include partials/play/library
        script(type="text/ng-template", id="play/game")
            include partials/play/game
        script(type="text/ng-template", id="modal/viewCard")
            include partials/modal/viewcard
        script(type="text/ng-template", id="modal/gameOverWin")
            include partials/modal/gameoverwin
        script(type="text/ng-template", id="modal/gameOverLose")
            include partials/modal/gameoverlose
        script(type="text/ng-template", id="modal/opponentleft")
            include partials/modal/opponentleft
        script(type="text/ng-template", id="modal/waitingplayer")
            include partials/modal/waitingplayer