form(ng-submit="login()", name="loginForm", role="form")
    fieldset
        label(for="username") Username
        input(type="text", ng-model="username", placeholder="Username", name="username", required, autofocus)
        label(for="password") Password
        input(type="password", ng-model="password", placeholder="Password", name="password", required)
        p.error {{error}}
        button(type="submit", ng-disabled="loginForm.$invalid") Login
