extends layout

block content
  div#lobby-content
    div#lobby-chat
      h5 Chat
      div#lobby-chat-content
        ul
      input#lobby-chat-input(type="text",placeholder="compose message...")
      button Envoyer
    div#lobby-other
      div#lobby-profile
        h5 Profile
        div#lobby-profile-min
          img(src="/img/avatar.png")
          p= username
          button#lobby-profile-editdeck Edit deck
        div#lobby-profile-max
          div#lobby-profile-library
            h6 Library :
            ul
              li.red
                h7 Reds
                ul
              li.white
                h7 Whites
                ul
              li.blue
                h7 Blues
                ul
              li.green
                h7 Greens
                ul
              li.golden
                h7 Goldens
                ul
              li.special
                h7 Specials
                ul
            a.prev <<
            a.next >>
            div#lobby-profile-preview
          div#lobby-profile-deck  
            h6 Deck :
            ul
              li
              li
              li
              li
              li
              li
              li
              li
              li
          button#lobby-profile-cancel Annuler
          button#lobby-profile-save Sauvegarder le deck
          
      div#lobby-games
        h5 Games rooms
        div#lobby-games-content
          ul
        button#lobby-games-create Nouveau
        button#lobby-games-join Rejoindre
        
      div#lobby-players
        h5 Available player
        div#lobby-players-content
          ul
        button#lobby-players-invite Inviter
      
      
  div#game-content
    div#game-view
      div.opponent-zone
        ul.deck
        ul.hand
        div.bin
      div#game-view-board
        div
          div(data-cellid="0")
          div(data-cellid="1")
          div(data-cellid="2")
          div(data-cellid="3")
          div(data-cellid="4")
          div(data-cellid="5")
          div(data-cellid="6")
          div(data-cellid="7")
          div(data-cellid="8")
        ul#game-view-wooddeck
      div.player-zone
        ul.deck
        ul.hand
        div.bin
        
    div#game-playerdata
      div.portrait
      ul
      span
      strong
    div#game-opponentdata
      div.portrait
      ul
      span
      strong 
    
    button#game-quit Quit
    
    div.row(style="display:none")
      div#gamePanel.span3
        ul#game-chat
        input#game-input(type="text",placeholder="compose message...")
        button#game-post Send
        hr
        button#game-quit Quit
      
  
  div#mask
    div#popin-creategame    
        h6 Créer une partie
        div.content
          label Nom de la partie :
          input#popin-creategame-name(type="text",value="#{username}'s game")
          p.error
          button.cancel Annuler
          button#popin-creategame-create Créer
    
    div#popin-waitingplayer 
        h6 Créer une partie
        div.content
          p Waiting for another player...
          button#popin-waitingplayer-cancel Cancel
     
    div#popin-displaycard
      img
      span.cancel X
    
    div#popin-endgame
      h6
      div.content
        button#popin-quitgame-quit Quit
        
    div#popin-erreur.popin(action="/?no")
      fieldset
        legend Erreur
        div.content
          div#error-message
          p.error
          a.btn(href="/login") S'identifier
          
    div#popin-invitation
      p 
        span.sender
        | invite you to play a game
      button#ppacceptinvit Accept
    
    