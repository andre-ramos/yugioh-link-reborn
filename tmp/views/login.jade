        button(type="submit") Jouer  
    form#login-login(action="/login",method="post")
        fieldset
          label Pseudo :
          input#lnickname(type="text",name="lnickname",placeholder="ton pseudo")
          label Mot de passe :
          input#lpassword(type="text",name="lpassword",placeholder="mot de passe")
          p.error= error
          button(type="submit") S'identifier  
    form#login-register(action="/login",method="post")
      fieldset
          label Pseudo :
          input#rnickname(type="text",name="rnickname",placeholder="ton pseudo")
          label Email :
          input#remail(type="text",name="remail",placeholder="email")
          label Mot de passe :
          input#rpassword(type="text",name="rpassword",placeholder="mot de passe")
          p.error= error
          button(type="submit") S'enregistrer