extends layout

block content
  div#login-banner
    div
      h1 Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse sollicitudin tellus!!!!!!
      p Nulla in elit vitae massa pellentesque mollis bibendum et erat.
 
  div#login-content
    ul
      li#tab1.selected Guest
      li#tab2 Log In
      li#tab3 Register
    form#login-guest.selected(action="/login",method="post")
      fieldset
        label Pseudo :
        input#nickname(type="text",name="nickname",placeholder="ton pseudo")
